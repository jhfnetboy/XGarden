{
  "manifest_version": 3,
  "name": "XGarden",
  "version": "0.1.4",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "action": { "default_popup": "index.html" },
  "background": {
    "service_worker": "./src/background/background.ts"
  },
  "options_page" : "src/optionsPage/optionsPage.html",
  "content_scripts": [
    {
      "js": ["src/content/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://ark.cn-beijing.volces.com/*",
    "https://*.volces.com/*",
    "https://*.volcengine.com/*"
  ]
}
